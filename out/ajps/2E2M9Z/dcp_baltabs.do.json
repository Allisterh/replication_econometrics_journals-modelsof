[
  "* ./dcp_baltabs",
  "* Replication script for Distelhorst and Locke. Does Compliance Pay?. AJPS.",
  "* Generates balance table (Table A6)",
  "* precursors: dcp_main.do --> ./int/data_postmain.dta and sets globals",
  "* called by ./rundir.do",
  "clear",
  "set more off",
  "global RESULTS ./output",
  "* Read balance tables data generated by dcp_main",
  "foreach yr in 2009 2010 2011 {",
  "clear",
  "use \"$RESULTS/Table_A6_`yr'_leftpanel.dta\"",
  "keep Xname mean_Tr mean_Co_Pre mean_Co_Post",
  "* Round the variables",
  "foreach var in mean_Tr mean_Co_Pre mean_Co_Post {",
  "replace `var' = round(`var', .0001)",
  "rename `var' `var'_comp",
  "* Merge left panel with right panel",
  "merge 1:1 Xname using \"$RESULTS/Table_A6_`yr'_rightpanel.dta\"",
  "* Round the variables",
  "foreach var in mean_Tr mean_Co_Pre mean_Co_Post {",
  "replace `var' = round(`var', .0001)",
  "rename `var' `var'_viol",
  "* Put the variables in order for display",
  "gen seq = 0",
  "replace seq = 1 if regexm(Xname, \"lestspend\")",
  "replace seq = 2 if regexm(Xname, \"china|bangla|india|indo|cambo|pakistan|philipp|taiwan|thailand|turk|viet\")",
  "replace seq = 3 if regexm(Xname, \"clothing|cook|furniture|toys\")",
  "replace seq = 4 if regexm(Xname, \"product\")",
  "* Change variable names",
  "sort seq Xname",
  "replace Xname = \"ln(`yr') order value\" if Xname==\"lestspend_dall\"",
  "local nextyr = `yr' + 1",
  "replace Xname = \"Pre-trend (`yr'-`nextyr')\" if Xname==\"lestspend_diff\"",
  "save $RESULTS/Table_A6_`yr'.dta, replace",
  "* Append the top, middle, and bottom panels",
  "use $RESULTS/Table_A6_2009.dta, clear",
  "append using $RESULTS/Table_A6_2010.dta",
  "append using $RESULTS/Table_A6_2011.dta",
  "* Intuitive variable names",
  "ren Xname Variable",
  "ren mean_Tr_comp mean_stayscomp",
  "ren mean_Co_Pre_comp mean_Pre_declines",
  "ren mean_Co_Post_comp mean_Post_declines",
  "ren mean_Tr_viol mean_improves",
  "ren mean_Co_Pre_viol mean_Pre_staysnoncomp",
  "ren mean_Co_Post_viol mean_Post_staysnoncomp",
  "* Write Table A6: Pre- and Post-balancing covariate means",
  "outsheet Variable mean_stayscomp-mean_Post_staysnoncomp using \"$RESULTS/Table_A6_Final.tex\", replace delimiter(\"&\") noquote",
  "!sed -e 's/$/ \\\\\\\\/g' -i \"\" $RESULTS/Table_A6_Final.tex",
  "* Clear the .dta from output folder",
  "!rm $RESULTS/Table_A6*.dta"
]